<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.TagController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" nodeOrientation="INHERIT" pickOnBounds="true">
         <image>
            <Image url="@plavo.jpg" />
         </image></ImageView>
      <ListView fx:id="tagsList" layoutX="20.0" layoutY="14.0" prefHeight="375.0" prefWidth="200.0" />
      <TextField fx:id="tagName" layoutX="281.0" layoutY="110.0" prefHeight="33.0" prefWidth="267.0" />
      <HBox layoutX="281.0" layoutY="162.0" prefHeight="26.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addTag" text="Add" />
            <Button mnemonicParsing="false" onAction="#updateTag" text="Update" />
            <Button mnemonicParsing="false" onAction="#deleteTag" text="Delete" />
         </children>
         <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </opaqueInsets>
      </HBox>
   </children>
</AnchorPane>
